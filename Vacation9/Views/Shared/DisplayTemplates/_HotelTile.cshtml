@model Vacation9.ViewModels.HotelVM
    @if (Model != null)
    {
        <div class="tile">
            <div class="linkerkantTile">

                <h4 class="titelHotel">@Model.NameHotel</h4>

                <div class="imgHotel">
                    <img src="~/images/@Model.Photo" asp-append-version="true" alt="@Model.NameHotel" />
                    <div class="score">
                        @Model.Score
                    </div>
                </div>
            </div>

            <div class="rechterkantTile">

                <div class="sterren">
                    @for (int i=0; i<Model.Stars; i++)
                    {
                        <img src="~/images/star.jpg" />
                    }
                </div>

                <div class="buttons">
                    @* <input type="button" value="Foto's'" class="btnFoto"/>
                    <input type="button" value="Bewaren"/>
                    <input type="button" value="Video"/> *@
                    <a class="btnFoto">Foto's</a>
                    <a class="btnBewaren">Bewaren</a>
                    <a class="btnVideo">Video</a>
                </div>

                <div class="benefit">-@Model.Benefit</div>
            </div>
        </div>
    }